<h1>商品一覧</h1>

<div>
    <%= link_to "新規投稿アイコン", new_admin_item_path %>
</div>

<table>
    <thead>
        <tr>
            <th>商品ID</th> <th>商品名</th> <th>税抜価格</th> <th>ジャンル</th> <th>ステータス</th>
        </tr>
    </thead>
    <tbody>
        <% @items.each do |item| %>
            <td><%= item.id %></td>
            <td>
                <%= link_to "#{item.name}", admin_item_path(item.id) %>
            </td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td><% if item.is_active? %>
                    <span>販売中</span>
                <% else %>
                    <span>販売停止中</span>
                <% end %>
            </td>
        <% end %>
    </tbody>
</table>
<%= paginate @items %>

