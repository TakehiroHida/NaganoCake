<h1>商品詳細</h1>

<div>
    <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "100*100" %>
    <% else %>
        <%= image_tag 'noimage', size: "100*100"  %>
    <% end %>
</div>

<div>
    <h3>商品名</h3>
        <%= @item.name %>
</div>

<div>
    <h3>商品説明</h3>
        <%= @item.introduction %>
</div>

<div>
    <h3>ジャンル</h3>
        <%= Genre.find(@item.genre_id).name %>
</div>

<div>
    <h3>税込価格(税抜価格)</h3>
        <span><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</span>
</div>

<div>
    <h3>販売ステータス</h3>
        <%= @item.is_active ? '販売中' : '販売停止中' %>
</div>

<div>
    <%= link_to "編集する" ,edit_admin_item_path %>
</div>