<h1>注文履歴一覧</h1>

<table>
    <thead>
        <tr>
            <th>購入日時</th> <th>購入者</th> <th>注文個数</th> <th>注文ステータス</th>
        </tr>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
            <td><%= link_to "#{order.created_at}", admin_order_path %></td>
            <td><%= order.customer_id.last_name %><%= order.customer_id.first_name %></td>
            <td><%= #order_itemsテーブルのamountをcount %></td>
            <td><%= order.ordered_status %></td>
        <% end %>
    </tbody>
</table>

<%= paginate @orders %>