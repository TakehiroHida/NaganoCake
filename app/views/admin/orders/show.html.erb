<h1>注文履歴一覧詳細</h1>
<div>
    <%= form_with model: @order do |f| %>
        <div>
            <h3>購入者</h3>
                <%= f.customer_id.name %>
        </div>
        <div>
            <h3>注文日</h3>
                <%= f.created_at %>
        </div>
        <div>
            <h3>配送先</h3>
                <%= f.postal_cord %> <%= f.address %>
                <%= f.name %>
        </div>
        <div>
            <h3>支払方法</h3>
                <%= f.payment_method %>
        </div>
        <div>
            <h3>注文ステータス</h3>
                <%= f.select :ordered_status,  %>
                <%= f.submit "更新" %>
        </div>
</div>

<div>
    <table>
        <thead>
            <tr>
                <th>商品名</th> <th>単価(税込)</th> <th>数量</th> <th>小計</th> <th>製作ステータス</th>
            </tr>
        </thead>
        <tbody>
            <% @order_items.each do |order_items| %>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            <% end %>
        </tbody>
    </table>
</div>

<div>
    <div>
        <h3>商品合計</h3>
    </div>
    <div>
        <h3>送料</h3>
    </div>
    <div>
        <h3>請求額合計</h3>
    </div>
</div>