<h1><%= customer.last_name %> <%= customer.first_name %>さんの会員情報編集</h1>

<div>
    <h3>会員ID</h3>
</div>

<% form_with model: @customer do |f| %>
    <div>
        <h3>氏名</h3>
            <%= f.text_field :last_name %> <%= f.text_field :first_name %>
    </div>
    
    <div>
        <h3>フリガナ</h3>
            <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
    </div>
    
    <div>
        <h3>郵便番号</h3>
            <%= f.text_field :postal_cord %>
    </div>
    
    <div>
        <h3>住所</h3>
            <%= f.text_field :address %>
    </div>
    
    <div>
        <h3>電話番号</h3>
            <%= f.text_field :telephone_number %>
    </div>
    
    <div>
        <h3>メールアドレス</h3>
            <%= f.text_field :email %>
    </div>
    
    <div>
        <h3>会員ステータス</h3>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted_false, "有効" %>
            
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted_true, "退会" %>
    </div>
    
    <div>
        <%= f.submit "変更を保存" %>
    </div>
<% end %>